<body>

<div class="container">
    <h2>Absensi Pegawai</h2>

    <label>Nama Pegawai</label>
    <input type="text" id="nama" placeholder="Masukkan nama">

    <label>Jabatan</label>
    <select id="jabatan">
        <option value="Cost Controller">Cost Controller</option>
        <option value="Drilling Engineer">Drilling Engineer</option>
        <option value="Engineer Assistant">Engineer Assistant</option>
    </select>

    <button onclick="checkIn()">Check-In</button>

    <div id="result"></div>
</div>

<script>
function checkIn() {
    let nama = document.getElementById("nama").value;
    let jabatan = document.getElementById("jabatan").value;
    let result = document.getElementById("result");

    if (nama.trim() === "") {
        alert("Nama harus diisi!");
        return;
    }

    if (!navigator.geolocation) {
        alert("GPS tidak tersedia di perangkat ini.");
        return;
    }

    navigator.geolocation.getCurrentPosition(success, error);

    function success(position) {
        let lat = position.coords.latitude;
        let lon = position.coords.longitude;
        let waktu = new Date().toLocaleString();

        result.style.display = "block";
        result.innerHTML = `
            <b>Check-in berhasil!</b><br><br>
            Nama: ${nama}<br>
            Jabatan: ${jabatan}<br>
            Waktu: ${waktu}<br>
            Lokasi:<br>
            Latitude: ${lat}<br>
            Longitude: ${lon}
        `;
    }

    function error() {
        alert("GPS tidak aktif / izin lokasi ditolak.");
    }
}
</script>

</body>
</html>
